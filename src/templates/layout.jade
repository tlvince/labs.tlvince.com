!!! 5
block vars
  - var bodyclass = null;
html(lang='en-GB')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          | #{locals.name} | Tom Vincent
      block description
        meta(name='description', content=locals.description)
        meta(name='author', content=locals.owner.name)
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/assets/styles/main.css')
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          h1
            a(href=locals.url)= locals.name
          p.description= locals.description
    div#content
      div.content-wrap
        block content
    footer
      div.content-wrap
        block footer
          section.copy
            p &copy; #{ new Date().getFullYear() }&nbsp;
              a(href=locals.owner.url)= locals.owner.name
